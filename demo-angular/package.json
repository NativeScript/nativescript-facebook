{
  "description": "NativeScript Facebook Sample Application With Angular",
  "license": "MIT",
  "nativescript": {
    "id": "org.nativescript.demoangular",
    "tns-ios": {
      "version": "5.0.0"
    },
    "tns-android": {
      "version": "5.0.0"
    }
  },
  "dependencies": {
    "@angular/common": "~6.1.0",
    "@angular/compiler": "~6.1.0",
    "@angular/core": "~6.1.0",
    "@angular/forms": "~6.1.0",
    "@angular/http": "~6.1.0",
    "@angular/platform-browser": "~6.1.0",
    "@angular/platform-browser-dynamic": "~6.1.0",
    "@angular/router": "~6.1.0",
    "nativescript-angular": "~6.2.0",
    "nativescript-facebook": "../src",
    "nativescript-theme-core": "^1.0.4",
    "nativescript-unit-test-runner": "^0.3.4",
    "rxjs": "~6.1.0",
    "tns-core-modules": "^5.0.1",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-jasmine": "^1.0.2",
    "karma-nativescript-launcher": "^0.4.0",
    "nativescript-css-loader": "~0.26.0",
    "nativescript-dev-typescript": "~0.7.4",
    "nativescript-dev-webpack": "~0.17.0",
    "tslint": "~5.11.0",
    "typescript": "~2.8.2",
    "@angular/compiler-cli": "~6.1.0",
    "@ngtools/webpack": "~6.2.0"
  },
  "scripts": {
    "build.plugin": "cd ../src && npm run build",
    "ci.tslint": "npm i && tslint --config '../tslint.json' 'app/**/*.ts' --exclude '**/node_modules/**'",
    "ci.android.build": "cd ../src && npm run build && cd ../demo-angular && tns build android",
    "ci.ios.build": "cd ../src && npm run build.iosOnly && cd ../demo-angular && tns build ios",
    "generate-android-snapshot": "generate-android-snapshot --targetArchs arm,arm64,ia32 --install"
  }
}